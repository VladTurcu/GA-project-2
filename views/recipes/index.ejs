<section class="index-hero">
  <div class="hero-body">
    <div class="search-title" >Search by Ingredients</div>
      <form class="searchB ingredients" multiple="multiple" method="GET" action="/recipes">
        <select class="input is-success src ingredients" required name="ingredients.name">
          <option selected disabled>Please select</option>
          <% ingredients.forEach(ingredient => { %>
          <option><%= ingredient %></option>
          <% }); %>

        </select>
        <button class="button is-success search-button"><i class="fa fa-search" aria-hidden="true"></i></button>
      </form>
  </div>
</section>


<div class="container container-main">
  <div class="columns is-multiline">
    <% recipes.forEach(recipe => { %>
      <div class="column is-one-third-desktop is-half-tablet">
        <div class="card">
          <div class="card-image">
            <figure class="image is-4by3">
              <a href="/recipes/<%= recipe.id %>"><img src="<%= recipe.image %>"></a>
            </figure>
          </div>
        <div class="card-content">
          <div class="media">
            <div class="media-content">
              <a href="/recipes/<%= recipe.id %>"><%= recipe.name %></a>
              <p class="index-description"><%= recipe.description %></p>
            </div>
          </div>
        </div>
      </div>
    </div>
      <% }) %>
  </div>
</div>
