<div class="recipeInd">

<div class="recipeHeading" >Search by Ingredients</div>
  <form class="searchB search-block ingredients" method="GET" action="/recipes">
    <select class="input is-primary ingredients" required name="ingredients.name">
      <option selected disabled>Please select</option>
      <% ingredients.forEach(ingredient => { %>
        <option><%= ingredient %></option>
      <% }); %>
    </select>
    <button class="button is-primary search-button">Search</button>
  </form>


</div>





<%# <div class="content">%>


<div class="columns is-multiline">
<% recipes.forEach(recipe => { %>
<div class="column is-one-third-desktop is-half-tablet">
<div class="card">
    <div class="card-image">
      <figure class="image is-4by3">
      <a href="/recipes/<%= recipe.id %>"><img src="<%= recipe.image %>"></a>
      </figure>
    </div>
    <div class="card-content">
      <div class="media">
        <div class="media-content">
          <p class="title is-5"><a href="/recipes/<%= recipe.id %>"><%= recipe.name %></a></p>
          <p class="description title is-5" maxlength="100"><%= recipe.description %></p>
        </div>
      </div>
    </div>
  </div>
</div>
<% }) %>
</div>
<%# </div>%>
