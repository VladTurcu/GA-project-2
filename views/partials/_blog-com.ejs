



  <form method="POST" action="/blog/<%= post.id %>/comments ">
    <div>

      <div class="field">
    <label class="label">Add a Comment</label>
    <div class="control">
      <input class="input" type="text" name="name" placeholder="Name" >
      <textarea class="textarea" name="text" placeholder="Textarea"></textarea>
    </div>
  </div>

    </div>
    <div>
      <label>Rate it</label><br>
      <label>
        1 <input type="radio" value="1" name="rating">
      </label>
      <label>
        2 <input type="radio" value="2" name="rating">
      </label>
      <label>
        3 <input type="radio" value="3" name="rating">
      </label>
      <label>
        4 <input type="radio" value="4" name="rating">
      </label>
      <label>
        5 <input type="radio" value="5" name="rating">
      </label>
    </div>
    <div class="control">
    <button class="button is-primary">Submit</button>
  </div>

  </form>









  <% post.comments.forEach(comment => { %>

  <div class="com box">
    <article class="media">
      <div class="media-left">
        <figure class="image is-64x64">
          <img src="https://s3.amazonaws.com/37assets/svn/765-default-avatar.png" alt="Image">
        </figure>
      </div>
      <div class="media-content">
        <div class="content">
          <p><strong><%= comment.name %>:</strong></p>
          <p> <%= comment.text %> - <%= comment.rating %>/5
                <form action="/blog/<%= post.id %>/comments/<%= comment.id %>" method="POST">
                  <input type="hidden" name="_method" value="DELETE">
                  <button class="button is-danger" name="button">Delete</button>
                </form>
          </p>
        </div>

      </div>
    </article>

  </div>

  <% }); %>


</article>
</div>
